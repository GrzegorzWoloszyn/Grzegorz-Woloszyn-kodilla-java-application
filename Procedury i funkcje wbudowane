DROP FUNCTION IF EXISTS FindReader;
DELIMITER $$

CREATE FUNCTION FindReader(id INT) RETURNS VARCHAR(2000) NOT DETERMINISTIC
BEGIN
     IF id > 0 THEN
		SELECT READER_ID, FIRSTNAME, LASTNAME, PESELID FROM READERS
        WHERE READER_ID = id;
     ELSE
		RETURN 'User_id is wrong, pls put a number > 0';
	END IF;
END$$

DELIMITER ;

SELECT FindReader(1);
