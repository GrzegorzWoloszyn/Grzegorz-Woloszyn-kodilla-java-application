SHOW COLUMNS FROM BOOKS LIKE 'BESTSELLER';

ALTER TABLE BOOOKS ADD BESTSELLER BOOLEAN DEFAULT false;

DROP PROCEDURE IF EXISTS UpdateBestsellers;
DELIMITER $$

CREATE PROCEDURE UpdateBestsellers()
BEGIN
DECLARE BOOKSRENTED, DAYS, BKS_ID INT;
DECLARE FINISHED INT DEFAULT 0;
DECLARE ALL_BOOKS CURSOR FOR SELECT BOOK_ID FROM BOOKS;
DECLARE CONTINUE HANDLER FOR NOT FOUND SET FINISHED = 1;
	OPEN ALL_BOOKS;
    WHILE (FINISHED = 0) DO
		    FETCH ALL_BOOKS INTO BKS_ID;
        IF (FINISHED = 0) THEN
			      SELECT COUNT(*) FROM RENTS
            WHERE BOOK_ID = BKS_ID
            INTO BOOKSRENTED;
            
            SELECT DATEDIFF(CURDATE(), MIN(RENT_DATE)) + 1 FROM RENTS
            WHERE BOOK_ID = BKS_ID
            INTO DAYS;
            
            UPDATE BOOKS SET BESTSELLER = isBestseller(BOOKSRENTED, DAYS)
            WHERE BOOK_ID = BKS_ID;
            COMMIT;
        END IF;
    END WHILE;
  CLOSE ALL_BOOKS;
END$$
DELIMITER ;


DROP FUNCTION IF EXISTS isBestseller;
DELIMITER $$

CREATE FUNCTION isBestseller(booksrented INT, days INT) RETURNS BOOLEAN DETERMINISTIC
BEGIN
DECLARE result BOOLEAN DEFAULT false;
  IF (30 * booksrented / days > 2) THEN
    SET result = TRUE;
  END IF;
  RETURN result;
END$$
DELIMITER ;
